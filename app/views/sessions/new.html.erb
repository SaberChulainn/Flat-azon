
<div class="card col-md-4" id="login-form">
  <div class="card-block">
    <div class="row">
      <div class="card-body">
        <h2 class="text-center">Welcome to Flat-Azon!</h2>
        <%= form_tag login_path, class: 'novalidate' do %>
          <div class="form-group">
            <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Enter username' %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter password' %>
          </div>
          <div class="form-group">
            <%= submit_tag "Sign in", class: 'btn btn-primary btn-block' %>
          </div>
          <p>Don't have an account? <%= link_to 'Sign up', signup_path %></p>
        <% end %>
      </div>
    </div>
  </div>

