<% if @results.size == 0 %>
  <h2>No items found</h2>
<% else %>
  <div class="container">
    <h2>Items that match: <%= @query %> </h2>
    <div class="row">
      <% @results.each do |item| %>
        <div class="col-md-3">
          <div class="card">
            <img class="card-img-top" src="<%= item.picture %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
              <h6 class="card-subtitle mb-2 text-muted"> $<%= item.price %> </h6>
              <p class="card-text"><%= item.description %></p>
              <% if current_user.id == item.user_id %>
                <a href="/items/<%= item.id %>/edit" class="btn btn-primary">Edit Item</a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>